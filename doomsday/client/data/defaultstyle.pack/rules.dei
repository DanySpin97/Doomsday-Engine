# Length rules for the default UI style

script {
    UNIT = 4.0
}

rule unit     { constant $= UNIT }
rule halfunit { constant $= UNIT / 2 }
rule gap      { constant $= UNIT * 3 }
rule glow     { constant $= UNIT * 7 }

group label {
    rule gap { constant $= gap.constant / 2 }
}

group document {
    rule progress { constant $= UNIT * 30 }
}

group editor {
    rule completion.height { constant = 400 }
}

group progress {
    rule textgap { constant $= gap.constant }
}

group about {
    rule width { constant = 320 }
}

group console {
    rule width { constant = 500 }
}

group gameselection {
    rule max.width  { constant = 800 }
    rule max.height { constant = 600 }
}

rule scrollarea.bar { constant $= UNIT }
