# Main configuration for libdeng2.
# Read by all applications.

importPath = ['', '/modules']

# The default audio and video subsystems.
video = 'opengl'
audio = 'fmod'

# Log parameters.
record log

# Log message levels.
const log.TRACE    = 0
const log.DEBUG    = 1
const log.VERBOSE  = 2
const log.MESSAGE  = 3
const log.INFO     = 4
const log.WARNING  = 5
const log.ERROR    = 6
const log.CRITICAL = 7

log.file       ?= '/home/doomsday.out'
log.level      ?= log.DEBUG
log.bufferSize ?= 1000
