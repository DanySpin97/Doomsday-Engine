name: jDoom Resource Pack (jDRP) 1.1
component: game-jdoom

provides: something-really-cool

language english (
  chain-winddown: Enable chaingun wind-down
  jdrp-prefs: Preferences
  models-nohud: Disable HUD models
  models-nomonsters: Disable monster models
  models-options: Model Options
  models-noplayer: Disable player model
  models-noweapon: Disable weapon item models
  models-noitem: Disable item models
  models-nofxmod: Disable special fx models
  models-nodecor: Disable decoration models
)

toggle chain-winddown (
  option: -winddown
  default: yes
  subgroup: jdrp-prefs
  group: preferences
)

